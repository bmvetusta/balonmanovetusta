---
import { Image } from 'astro:assets';
import SocialNetwork from '../components/SocialNetwork.astro';

import advertMemberImage from '../assets/images/abonate2425.png';

const canonicalUrl = Astro.url.href;
const title = `Club Balonmano Vetusta ü§æ‚Äç‚ôÇÔ∏è - Primera Nacional - Asturias`;
const description = `Web del Club Balonmano Vetusta, tambi√©n conocido como Auto-Center Principado Vetusta por motivos de patrocinio. Somos de Oviedo y disputamos la liga de Primera Nacional de Espa√±a encuadrado en el grupo B. Tambi√©n tenemos escuelas en distintos colegios de Oviedo y disputamos la liga Territorial senior masculino de Asturias.`;
const twitterDescription = `Web del Club Balonmano Vetusta, tambi√©n conocido como Auto-Center Principado Vetusta por motivos de patrocinio. Somos de Oviedo.`;
const type = 'website';
const ogImage = advertMemberImage; // { src, width, height}
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <title>{title}</title>

    <meta name='description' content={description} />

    <meta property='og:title' content={title} />
    <meta property='og:description' content={description} />

    <meta property='twitter:title' content={title} />
    <meta property='twitter:description' content={twitterDescription} />

    <meta property='og:url' content={canonicalUrl} />
    <meta property='og:type' content='website' />
    <meta
      property='og:site_name'
      content='Club Balonmano Vetusta, club de la ciudad de Oviedo. Tambi√©n conocido como Auto-Center Principado Vetusta por motivos de patrocinio.'
    />
    <meta
      property='og:image:alt'
      content={'Club Balonmano Vetusta. Abonate y ven a disfrutar del balonmano de Primera Nacional con nosotros.'}
    />
    <meta property='og:image:locale' content='es-ES' />
    <meta property={`og:image`} content={ogImage.src} />
    <meta property={`og:image:type`} content={type} />
    <meta property={`og:image:width`} content={ogImage.width.toString()} />
    <meta property={`og:image:height`} content={ogImage.height.toString()} />

    <link rel='image_src' href={advertMemberImage.src} />

    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <link rel='apple-touch-icon' sizes='180x180' href='/apple-touch-icon.png' />

    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <link rel='icon' type='image/png' sizes='192x192' href='/android-chrome-192x192.png' />
    <link rel='icon' type='image/png' sizes='32x32' href='/favicon-32x32.png' />
    <link rel='icon' type='image/png' sizes='16x16' href='/favicon-16x16.png' />
    <link rel='icon' type='image/png' href='/favicon.png' />
    <link rel='icon' type='image/x-icon' href='/favicon.ico' />
    <link rel='mask-icon' href='/favicon.svg' color='#151111' />

    <meta name='msapplication-TileImage' content='/mstile-144x144.png' />
    <meta name='msapplication-TileColor' content='#ff0000' />
    <meta name='theme-color' content='#151111' />
    <meta name='generator' content={Astro.generator} />
    <title>Club Balonmano Vetusta</title>
    <style>
      *::before,
      *::after {
        box-sizing: border-box;
      }

      * {
        box-sizing: border-box;
        min-width: 0;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode',
          Geneva, Verdana, sans-serif;

        margin: 0 auto;
        max-width: 100dvw;
        min-height: 100dvh;
        max-height: 100dvh;

        color-scheme: light dark;
        background-color: canvas;
        color: canvasText;

        direction: ltr;
        display: flex;
        flex-direction: column;
        place-items: center;
        align-items: center;
        gap: 1rem;
      }

      img {
        max-width: min(30dvw, 256px);
        height: auto;
        object-fit: contain;
        margin: 0 auto;
      }

      a {
        opacity: 0.6;

        display: flex;
        flex-direction: column;
        justify-items: center;
        align-items: center;
      }

      a:visited {
        opacity: 0.6;
      }

      a:hover,
      a:focus {
        opacity: 1;
      }

      @media (prefers-color-scheme: dark) {
        a,
        a:visited,
        a:hover,
        a:focus {
          --link-rgb-color: 240, 240, 240;
          --hover-link-rgb-color: var(--link-rgb-color);
          --visited-link-rgb-color: var(--link-rgb-color);
        }
      }

      @media (hover: none) {
        a {
          opacity: 1 !important;
        }
      }
    </style>
  </head>
  <body>
    <a href='/abonate' title='Abonate y apoyanos. Contamos contigo'
      ><Image
        src={advertMemberImage}
        alt='Cartel de la campa√±a de abonados 2024/25'
        width={300}
        height={600}
        loading='eager'
      /></a
    >

    <SocialNetwork
      icon='vetusta'
      href='/abonate'
      text='¬°Hazte socio y ven a vernos!'
      alt='Escudo del club balonmano vetusta'
      title='Enlace al formulario para hacerse socio del club'
    />

    <SocialNetwork
      icon='yt'
      href='https://youtube.com/@balonmanovetusta?sub_confirmation=1'
      text='¬°Suscribete! Para ver nuestros partidos'
      alt='Logo de Youtube'
      title='Suscribete a nuestro canal de Youtube'
    />

    <SocialNetwork
      icon='x'
      href='https://x.com/BM_Vetusta'
      text='@BM_Vetusta'
      alt='Logo de X (Twitter)'
      title='Enlace a la cuenta en X (Twitter) del club'
    />

    <SocialNetwork
      icon='instagram'
      href='https://instagram.com/balonmanovetusta'
      text='@balonmanovetusta'
      alt='Logo de Instagram'
      title='Enlace a la cuenta en Instagram del club'
    />
  </body>
</html>
