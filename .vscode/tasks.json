{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dev",
      "detail": "astro dev - package.json",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "dev"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "ENV": "development",
          "NODE_ENV": "development"
        }
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}